#!/usr/bin/env ruby
require 'bundler/setup'
require 'ezmq'
require 'stubborn_queue'
require 'oj'
require 'contracts'
require 'robot_sweatshop/config'

queue_settings = {
  name: 'test',
  timeout: configatron.job_timeout_length,
  file: "#{configatron.database_path}/conveyor.db"
}
@items = StubbornQueue.new queue_settings
$stdout.sync = true
include Contracts

Contract String => Fixnum
def enqueue(item)
  puts "enqueue #{item}"
  @items.enqueue item
end

Contract None => Fixnum
def dequeue
  puts "dequeue"
  @items.dequeue
end

Contract Fixnum => String
def lookup(id)
  puts "lookup #{id}"
  @items.lookup id
end

puts 'Starting Conveyor Belt'
server_settings = {
  port: configatron.conveyor_belt_port,
  encode: -> message { Oj.dump message },
  decode: -> message { Oj.load message }
}
server = EZMQ::Server.new server_settings
server.listen do |request|
  next unless request.is_a? Hash
  case request[:method]
  when 'enqueue'
    enqueue request[:data]
  when 'dequeue'
    dequeue
  when 'lookup'
    lookup request[:data]
  else
    ''
  end
end
